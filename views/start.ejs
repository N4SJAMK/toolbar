<% 
var link = "/edit";
var method = "POST";
if (user) {
	link = "/bars";
	method = "GET";
}
title = "index"
%>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="description" content="Fast and simple tool to create and share links with others">
    <meta name="author" content="N4S @ JAMK">
    <meta name="keywords" content="Toolbar, create, share, fast, simple, N4S, links, link collection">
    <title>Challenge Toolbar</title>

    <script src='/javascripts/all.js' type='text/javascript'></script>

    <link rel='stylesheet' type='text/css' media='screen' href='stylesheets/jquery-ui.css' >
    <link rel='stylesheet' type='text/css' media='screen' href='stylesheets/style.css' >
    <link rel='stylesheet' type='text/css' media='screen' href='stylesheets/dialog.css' >
    <link rel='stylesheet' type='text/css' media='screen' href='stylesheets/start.css' >
    <link rel='stylesheet' type='text/css' media='screen' href='stylesheets/fa-4/css/font-awesome.min.css' >
</head>

<body>


<div id="mainBox">

	<div style="width:100% float:right" id="topbarButtons">
    </div>

	<div id="topBox">
		<form method="<%- method %>" action="<%- link %>">
			<input id="btnTryDark" type="submit" value="">
		</form>
		<img id="imgTxtArrow" alt="text_arrow" src="../images/start/text_arrow.png">
	</div>

	<div class="center">
		<img alt="arrow" src="../images/start/arrow.png">
		<div id="journeymap"></div>
		<img alt="arrow" src="../images/start/arrow.png"><br>
		<form method="<%- method %>" action="<%- link %>">
			<input id="btnTryWhite" type="submit" value="">
		</form>
	</div>

</div>

<% include dialogs.ejs %>

<script>
$(function() {
    $("#topBox").rotate(-9);
    createTopbarButtons(<%- JSON.stringify(user) %>);
});


</script>

</body>
</html>